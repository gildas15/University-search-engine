<section class="banner-area relative" id="home">	
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row fullscreen d-flex align-items-center justify-content-center">
            <div class="banner-content col-lg-12">
                <h1 class="text-white">
                   Want to study anywhere in <span>Africa?</span>				
                </h1>
                <h4 class="text-medium">Use our school search to look for a school for you</h4>	
                {{ form_start(search_form,{ 'attr': { 'class' : 'search-form-area', 'role' : 'form' }}) }}
                    <div class="row justify-content-center form-wrap">
                        <div class="col-lg-4 form-cols">
                        {{ form_widget(search_form.AreaOfStudy) }}
                        </div>
                        <div class="col-lg-3 form-cols">
                            <div class="default-select" id="default-selects">
                                {{ form_widget(search_form.degree) }}
                            </div>
                        </div>
                        <div class="col-lg-3 form-cols">
                            <div class="default-select" id="default-selects2">
                                {{ form_widget(search_form.country) }}
                            </div>										
                        </div>
                        <div class="col-lg-2 form-cols">
                            <button type="submit" class="btn btn-info">
                              <span class="lnr lnr-magnifier"></span> Search
                            </button>
                        </div>								
                    </div>
                {{ form_end(search_form) }}
                <p class="text-white"> <span>Search by tags:</span> <a href="#">School Job</a> , <a href="#">scholarship</a>, <a href="#">housing</a></p>
            </div>											
        </div>
    </div>
</section>